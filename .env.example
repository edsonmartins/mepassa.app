# MePassa Development Environment Variables
# Copy this file to .env and fill in your values

# PostgreSQL
POSTGRES_DB=mepassa
POSTGRES_USER=mepassa
POSTGRES_PASSWORD=mepassa_dev_password

# Redis
REDIS_PASSWORD=mepassa_redis_dev

# TURN Server
TURN_USERNAME=mepassa
TURN_PASSWORD=mepassa_turn_dev
TURN_REALM=mepassa.app
TURN_EXTERNAL_IP=127.0.0.1

# Rust Logging
RUST_LOG=info

# Push Notifications
FCM_SERVER_KEY=your_fcm_server_key_here
APNS_CERT_PASSWORD=your_apns_cert_password_here

# Grafana (Optional - for monitoring)
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Bootstrap Nodes
BOOTSTRAP_NODE_1=localhost:4001
BOOTSTRAP_NODE_2=
BOOTSTRAP_NODE_3=
